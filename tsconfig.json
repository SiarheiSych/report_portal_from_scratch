{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "types": ["node", "webdriverio/async", "mocha"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "."
  },
  "include": ["test/**/*.ts", "common/**/**/*.ts"],
  "exclude": ["node_modules"]
}
