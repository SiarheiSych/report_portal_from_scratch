{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "types": ["node", "webdriverio/async", "mocha"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "."
  },
  "include": ["test/**/*.ts", "wdio.conf.ts", "common/**/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
